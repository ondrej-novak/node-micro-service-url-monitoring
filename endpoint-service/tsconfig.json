{
   "compilerOptions": {
      "target": "es2017",      
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "moduleResolution": "node",
      "outDir": "./bin",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true
   },
   "include": [
     "src/**/*.ts"
   ],
   "exclude": [
     "node_modules"
   ]
}