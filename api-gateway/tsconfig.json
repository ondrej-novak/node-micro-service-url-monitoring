{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "allowJs": true,
        "pretty": true,
        "outDir": "bin",
        "lib": [
            "es2017",
            "dom"
        ],
        "plugins": [
            {
                "disableNoUnusedVariableRule": false
            }
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}